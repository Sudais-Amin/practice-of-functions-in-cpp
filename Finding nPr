#include<iostream>
using namespace std;

int fact(int x)
{
	int fact=1;
	for(int i=1;i<=x;i++)
	{
		fact*=i;
	}
	return fact;
}


int main(){
	//nPr=n!/(n-r)!
	int n,r;
	cout<<"Enter the value of n : "<<endl; cin>>n;
	cout<<"Enter the value of r(r<=n)  :  "<<endl; cin>>r;
	if(n >= r)
	{
	int z=n-r;
	int y=fact(n)/fact(z);
	cout<<"nPr : "<<y;
	}
	else
	cout<<"Invalid input...!";
	
	return 0;
}
