#include<iostream>
using namespace std;
//linear search algorithm in ararys
int target(int arr[],int tar){
	
		for(int i=0;i<tar;i++)
	{
		if(arr[i] == tar)
		return i;
		
		}
		
		return -1;
		}

int main(){
	cout<<"Enter the Size of Array : "<<endl;
	int size;
	cin>>size;
	
	int arr[size];
	for(int i=0;i<size;i++)
	{
		cout<<"ENTER the  "<<i<<"  Index of Array : "<<endl;
		cin>>arr[i];
	}
	int tar;
	cout<<"Enter your target = "; cin>>tar;
cout<<"Your Target is at   "<< target(arr,tar)<<"   Index.";	
}
